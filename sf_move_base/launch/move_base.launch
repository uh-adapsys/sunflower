<?xml version="1.0"?>
<launch>
 
  <!-- Run the map server -->
  <node name="map_server" pkg="map_server" type="map_server" args="$(find sf_move_base)/uh-robot-house/map.yaml" >
  </node>

  <!--- Run AMCL -->
 <include file="$(find sf_move_base)/config/amcl.launch" />

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <remap from="scan" to="/scan_front"/>
    <rosparam file="$(find sf_move_base)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find sf_move_base)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find sf_move_base)/config/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find sf_move_base)/config/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find sf_move_base)/config/base_local_planner_params.yaml" command="load" />
  </node>
</launch>
