<!-- -*- mode: XML -*- -->

<launch>
	<arg name="robotVersion" default="sf1-1" />
	<arg name="robot_ns" default="/sunflower1_1" />
	<arg name="person_ns" default="/person" />
	<arg name="world" default="$(find uh_simulation)/webots/worlds/robotHouseWithResearcher2.wbt" />

	<param name="/use_sim_time" value="true" />
	<include file="$(find sf_simulation)/launch/sim_common.launch">
		<arg name="sunflower_ns" value="$(arg robot_ns)" />
		<arg name="version" value="$(arg robotVersion)" />
	</include>
	<include file="$(find uh_simulation)/launch/start_person_sim.launch" ns="$(arg person_ns)">
		<arg name="ns" value="$(arg person_ns)" />
	</include>
	<include file="$(find uh_simulation)/launch/start_webots.launch">
		<arg name="world" value="$(arg world)" />
	</include>
	<node pkg="rviz" type="rviz" name="rviz" args="-d $(find sf_simulation)/config/webots.rviz" />
</launch>