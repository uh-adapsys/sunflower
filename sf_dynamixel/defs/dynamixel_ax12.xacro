<?xml version="1.0" encoding="UTF-8"?>
<robot
    xmlns:controller="http://playerstage.sourceforge.net/gazebo/xmlschema/#controller"
    xmlns:interface="http://playerstage.sourceforge.net/gazebo/xmlschema/#interface"
    xmlns:sensor="http://playerstage.sourceforge.net/gazebo/xmlschema/#sensor" xmlns:xacro="http://ros.org/wiki/xacro">
    <xacro:macro name="ax12" params="name parent minPosition maxPosition maxVelocity">
        <joint name="${name}_joint" type="revolute">
            <parent link="${parent}_link"/>
            <child link="${name}_link"/>
            <origin xyz="0.0385 0 0" rpy="1.5707 0 0"/>
            <axis xyz="0 0 1"/>
            <limit effort="0" lower="${minPosition}"
                upper="${maxPosition}" velocity="${maxVelocity}"/>
        </joint>
        <link name="${name}_link">
            <collision>
                <geometry>
                    <box size="0.050 0.038 0.032"/>
                </geometry>
                <origin rpy="-1.5707 0 0" xyz="-0.0385 0 0"/>
            </collision>
            <visual>
                <geometry name="ax12mesh">
                    <mesh
                        filename="package://sf_dynamixel/meshes/ax12_box_plain.stl" scale="0.001 0.001 0.001"/>
                </geometry>
                <!-- xyz 0.050 0.038 0.032 -->
                <origin rpy="0 0 0" xyz="0.0135 0 0"/>
                <material name="black_plastic">
                    <color rgba="0.3 0.3 0.3 1"/>
                </material>
            </visual>
        </link>
    </xacro:macro>
    <xacro:macro name="ax12old" params="name parent minPosition maxPosition maxVelocity *origin">
        <joint name="${name}_joint" type="revolute">
            <parent link="${parent}_link"/>
            <child link="${name}_link"/>
            <insert_block name="origin"/>
            <axis xyz="0 -1 0"/>
            <limit effort="0" lower="${minPosition}"
                upper="${maxPosition}" velocity="${maxVelocity}"/>
        </joint>
        <link name="${name}_link">
            <collision>
                <geometry>
                    <box size="0.050 0.038 0.032"/>
                </geometry>
                <origin rpy="0 0 0" xyz="0.0385 0 0"/>
            </collision>
            <visual>
                <geometry name="ax12mesh">
                    <mesh
                        filename="package://sf_dynamixel/meshes/ax12_box_plain.stl" scale="0.001 0.001 0.001"/>
                </geometry>
                <!-- xyz 0.050 0.038 0.032 -->
                <origin rpy="0 0 0" xyz="0.0135 0 0"/>
                <material name="black_plastic">
                    <color rgba="0.3 0.3 0.3 1"/>
                </material>
            </visual>
        </link>
    </xacro:macro>
    <xacro:macro name="ax12inverted" params="name parent minPosition maxPosition maxVelocity *origin">
        <joint name="${name}_joint" type="revolute">
            <parent link="${parent}_link"/>
            <child link="${name}_link"/>
            <insert_block name="origin"/>
            <axis xyz="-1 0 0"/>
            <limit effort="0" lower="${minPosition}"
                upper="${maxPosition}" velocity="${maxVelocity}"/>
        </joint>
        <link name="${name}_link">
            <collision>
                <geometry>
                    <box size="0.050 0.038 0.032"/>
                </geometry>
                <origin rpy="0 0 1.5707" xyz="0.0385 0 0"/>
            </collision>
            <visual>
                <geometry name="ax12mesh">
                    <mesh
                        filename="package://sf_dynamixel/meshes/ax12_box_plain.stl" scale="0.001 0.001 0.001"/>
                </geometry>
                <!-- xyz 0.050 0.038 0.032 -->
                <origin rpy="0 0 0" xyz="0.0135 0 0"/>
                <material name="black_plastic">
                    <color rgba="0.3 0.3 0.3 1"/>
                </material>
            </visual>
        </link>
    </xacro:macro>
</robot>
